generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  emailVerified     DateTime?
  passwordHash      String?
  name              String?
  role              String    @default("buyer")
  verificationLevel String    @default("basic")
  avatar            String?
  businessLicense   String?
  rating            Float?
  locationLat       Float?
  locationLng       Float?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  listings          Listing[] @relation("SellerListings")
  bids              Bid[]
  transactionsAsBuyer  Transaction[] @relation("BuyerTransactions")
  transactionsAsSeller Transaction[] @relation("SellerTransactions")
  subscriptions     Subscription[]
  savedSearches     SavedSearch[]
  notifications     Notification[]
  reviewsGiven      Review[]  @relation("Reviewer")
  reviewsReceived   Review[]  @relation("Reviewee")
}

model Listing {
  id                 String    @id @default(cuid())
  sellerId           String
  seller             User      @relation("SellerListings", fields: [sellerId], references: [id], onDelete: Cascade)
  title              String
  description        String    @db.Text
  category           String
  subcategory        String?
  conditionGrade     String
  saleType           String
  price              Decimal   @db.Decimal(12, 2)
  reservePrice        Decimal?  @db.Decimal(12, 2)
  qualityScore       Float?
  locationLat        Float?
  locationLng        Float?
  partOutEnabled     Boolean   @default(false)
  status             String    @default("draft")
  visibilityStart    DateTime?
  auctionEndTime     DateTime?
  auctionDuration    Int?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  photos             ListingPhoto[]
  manifest           Manifest?
  bids               Bid[]
  transactions       Transaction[]
  syndicationJobs    SyndicationJob[]
}

model ListingPhoto {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url       String
  position  Int      @default(0)
  isHero    Boolean  @default(false)
}

model Manifest {
  id         String         @id @default(cuid())
  listingId  String         @unique
  listing    Listing        @relation(fields: [listingId], references: [id], onDelete: Cascade)
  fileUrl    String
  parsedData Json?
  totalMSRP  Decimal?       @db.Decimal(12, 2)
  itemCount  Int?
  items      ManifestItem[]
}

model ManifestItem {
  id          String   @id @default(cuid())
  manifestId  String
  manifest    Manifest @relation(fields: [manifestId], references: [id], onDelete: Cascade)
  sku         String?
  brand       String?
  description String?  @db.Text
  quantity    Int      @default(1)
  msrp        Decimal? @db.Decimal(10, 2)
  category    String?
}

model Bid {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  bidderId  String
  bidder    User     @relation(fields: [bidderId], references: [id], onDelete: Cascade)
  amount    Decimal  @db.Decimal(12, 2)
  maxBid    Decimal? @db.Decimal(12, 2)
  isProxy   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Transaction {
  id              String   @id @default(cuid())
  listingId       String
  listing         Listing  @relation(fields: [listingId], references: [id])
  buyerId         String
  buyer           User     @relation("BuyerTransactions", fields: [buyerId], references: [id])
  sellerId        String
  seller          User     @relation("SellerTransactions", fields: [sellerId], references: [id])
  amount          Decimal  @db.Decimal(12, 2)
  platformFee      Decimal  @db.Decimal(12, 2)
  stripePaymentId String?
  status          String
  escrowReleaseAt DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  reviews         Review[]
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan                 String
  stripeSubscriptionId String?  @unique
  status               String
  currentPeriodEnd     DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model SavedSearch {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  filters     Json
  alertEnabled Boolean @default(false)
  createdAt   DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  body      String?  @db.Text
  read      Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now())
}

model Review {
  id             String       @id @default(cuid())
  transactionId  String
  transaction    Transaction  @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  reviewerId     String
  reviewer       User         @relation("Reviewer", fields: [reviewerId], references: [id])
  revieweeId     String
  reviewee       User         @relation("Reviewee", fields: [revieweeId], references: [id])
  rating         Int
  comment        String?      @db.Text
  createdAt      DateTime     @default(now())
}

model SyndicationJob {
  id         String   @id @default(cuid())
  listingId  String
  listing    Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  channel    String
  status     String
  postedAt   DateTime?
  externalUrl String?
  createdAt  DateTime @default(now())
}
